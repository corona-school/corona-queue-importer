{
	"compilerOptions": {
		"experimentalDecorators": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"lib": ["es2015"]
	},
	"include": ["*"]
}
